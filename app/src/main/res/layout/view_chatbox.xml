<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp">

    <LinearLayout
        android:id="@+id/linearLayout_chat_bot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="16dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true">

        <ImageView
            android:id="@+id/imageView_bot"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/ic_launcher_round" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:src="@drawable/shape_arrow_chat_bot"
            android:layout_gravity="top"/>
        <LinearLayout
            android:id="@+id/frameLayout_chat_bot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/shape_textbox_chat_bot">

            <TextView
                android:id="@+id/textView_chat_bot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="250dp"
                android:text="Message"
                android:textColor="@color/white"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/textView_time_bot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="time"
                android:maxWidth="250dp"
                android:textColor="#ccffffff"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout_chat_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_marginVertical="16dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true">

        <LinearLayout
            android:id="@+id/frameLayout_chat_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/shape_textbox_chat_user">

            <TextView
                android:id="@+id/textView_chat_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="250dp"
                android:text="Message"
                android:textColor="@color/white"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/textView_time_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="time"
                android:maxWidth="250dp"
                android:textColor="#ccffffff"/>
        </LinearLayout>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:src="@drawable/shape_arrow_chat_user"
            android:layout_gravity="top"/>
    </LinearLayout>

</RelativeLayout>